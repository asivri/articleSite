extends layout

block content
    h1= 'Register'

    if errors
        each error, i in errors
            div.alert.alert-warning #{error.msg}
    form(method='post', action='/users/register',enctype='multipart/form-data')
        .form-group
            label Name:
            input.form-control(name='name', type='text')
        .form-group
            label Last Name:
            input.form-control(name='lastName', type='text')
        .form-group
            label Email:
            input.form-control(name='email', type='email')
        .form-group
            label Username:
            input.form-control(name='username', type='text')
        .form-group
            label Password:
            input.form-control(name='password', type='password')
        .form-group
            label Password Again:
            input.form-control(name='secondPassword', type='password')
        .form-group
            label Image
            input.form-control(name='userImage', type='file')
        input.btn.btn-primary(type='submit', name='submit',value='Uye Ol')


