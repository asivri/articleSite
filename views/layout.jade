doctype html
html(lang='en')
  head
    title An Article Website
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
  body
      .container
          nav.navbar.navbar-default
              .container-fluid
                  // Brand and toggle get grouped for better mobile display
                  .navbar-header
                      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                          span.sr-only Toggle navigation
                          span.icon-bar
                          span.icon-bar
                          span.icon-bar
                  // Collect the nav links, forms, and other content for toggling
                  #bs-example-navbar-collapse-1.collapse.navbar-collapse
                      ul.nav.navbar-nav
                          li.active
                              a(href='/')
                                  | Home
                                  span.sr-only (current)
                          li
                              a(href='/about') About
                          li.dropdown
                              a.dropdown-toggle(data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                  | Categories
                                  span.caret
                              ul.dropdown-menu
                                  li
                                      a(href='/category1') Category 1
                                  li
                                      a(href='/category2') Category 2
                                  li
                                      a(href='category3') Category 3

                      form.navbar-form.navbar-left
                          input.form-control(type='text', placeholder='Search Article')
                          button.btn.btn-default(type='submit') Search

                      form.navbar-form.navbar-right
                          .form-group
                          if !user
                            a.btn.btn-default(href='/users/login', role='submit') Login
                            a.btn.btn-default(href='/users/register', role='submit') Register
                          if user
                            a.btn.btn-default(href='/users/logout', role='submit') Logout






      block content
